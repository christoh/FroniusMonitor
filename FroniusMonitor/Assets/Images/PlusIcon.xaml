<Viewbox x:Class="De.Hochstaetter.FroniusMonitor.Assets.Images.PlusIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:De.Hochstaetter.FroniusMonitor.Assets.Images"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16">
    <Canvas Height="16" Width="16" DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=local:PlusIcon}}">
        <Line X1="0" X2="16" Y1="8" Y2="8" Stroke="{Binding Foreground}" StrokeThickness="1.5" SnapsToDevicePixels="True"/>
        <Line Y1="0" Y2="16" X1="8" X2="8" Stroke="{Binding Foreground}" StrokeThickness="1.5" SnapsToDevicePixels="True"/>
    </Canvas>
</Viewbox>
