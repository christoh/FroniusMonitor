<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:controls="clr-namespace:De.Hochstaetter.HomeAutomationClient.Controls"
             xmlns:viewModels="clr-namespace:De.Hochstaetter.HomeAutomationClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="De.Hochstaetter.HomeAutomationClient.Views.MainView"
             x:DataType="viewModels:MainViewModel">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<viewModels:MainViewModel />
	</Design.DataContext>

	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" FontSize="20" Margin="0,0,0,16"/>
        <TextBlock Text="{Binding Value}" FontSize="16" Margin="0,0,0,16" HorizontalAlignment="Center"/>
        <controls:HalfCircleGauge Height="240" Minimum="1000" Maximum="1200" Foreground="Blue" ColorAllTicks="False" Origin="0" Value="{Binding Value}" GaugeColors="{x:Static controls:Gauge.HighIsBad}"/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <system:Double x:Key="M1">-1</system:Double>
                <system:Double x:Key="P1">1</system:Double>
            </StackPanel.Resources>
            <StackPanel.Styles>
                <Style Selector="Button">
                    <Setter Property="Margin" Value="5,0"/>
                </Style>
            </StackPanel.Styles>
            <Button Content="-1" Command="{Binding AdjustValueCommand}" CommandParameter="{StaticResource M1}"/>
            <Button Content="+1" Command="{Binding AdjustValueCommand}" CommandParameter="{StaticResource P1}"/>
            <Button Content="Min" Command="{Binding MinValueCommand}"/>
            <Button Content="Mid" Command="{Binding MidValueCommand}"/>
            <Button Content="Max" Command="{Binding MaxValueCommand}"/>
        </StackPanel>
	</StackPanel>
</UserControl>
