<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonia="clr-namespace:De.Hochstaetter.HomeAutomationClient.Assets.LoadingIndicators.Avalonia">

    <Design.PreviewWith>
        <Border Width="256" Height="256"
                Background="#333333">

            <avalonia:LoadingIndicator Foreground="Chartreuse"
                                BorderBrush="DarkRed"
                                BorderThickness="1"
                                Theme="{DynamicResource ArcsRing}"
                                IsActive="True"
                                Mode="ArcsRing"
                                SpeedRatio="1" />
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="ArcsRing" TargetType="avalonia:LoadingIndicator">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#CC119EDA" />
        <Setter Property="Width" Value="{Binding $parent[avalonia:LoadingIndicator].Bounds.Width}" />
        <Setter Property="Height" Value="{Binding $parent[avalonia:LoadingIndicator].Bounds.Height}" />
        <Setter Property="MinWidth" Value="64" />
        <Setter Property="MinHeight" Value="64" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        IsVisible="{TemplateBinding IsActive}"
                        IsHitTestVisible="{TemplateBinding IsHitTestVisible}"
                        ClipToBounds="{TemplateBinding ClipToBounds}">

                    <Border.Styles>
                        <Style Selector="Viewbox">
                            <Setter Property="Width" Value="{TemplateBinding Width}" />
                            <Setter Property="Height" Value="{TemplateBinding Height}" />
                            <Setter Property="StretchDirection" Value="Both" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style Selector="Arc">
                            <Setter Property="Opacity" Value="0.3" />
                            <Setter Property="Margin" Value="5" />
                            <Setter Property="MinWidth" Value="{TemplateBinding MinWidth}" />
                            <Setter Property="MinHeight" Value="{TemplateBinding MinHeight}" />
                            <Setter Property="StrokeThickness" Value="7" />
                            <Setter Property="StrokeLineCap" Value="Square" />
                            <Setter Property="SweepAngle" Value="20" />
                        </Style>
                    </Border.Styles>

                    <Viewbox>
                        <Viewbox.Styles>
                            <Style Selector="avalonia|LoadingIndicator:inactive /template/ Arc" />

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc1">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc2">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.125"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc3">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.250"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc4">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.375"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc5">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.500"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc6">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.625"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc7">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.750"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#Arc8">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               Delay="0:0:0.875"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="Opacity" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="10%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="Opacity" Value="0.3" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Viewbox.Styles>

                        <Grid>
                            <Arc x:Name="Arc1"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="-100" />

                            <Arc x:Name="Arc2"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="-55" />

                            <Arc x:Name="Arc3"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="-10" />

                            <Arc x:Name="Arc4"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="35" />

                            <Arc x:Name="Arc5"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="80" />

                            <Arc x:Name="Arc6"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="125" />

                            <Arc x:Name="Arc7"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="170" />

                            <Arc x:Name="Arc8"
                                 Stroke="{TemplateBinding Foreground}"
                                 StartAngle="215" />
                        </Grid>
                    </Viewbox>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>