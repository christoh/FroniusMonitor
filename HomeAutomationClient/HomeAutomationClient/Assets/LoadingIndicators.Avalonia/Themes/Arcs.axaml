<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonia="clr-namespace:De.Hochstaetter.HomeAutomationClient.Assets.LoadingIndicators.Avalonia">

    <Design.PreviewWith>
        <Border Width="256" Height="256"
                Background="#333333">

            <avalonia:LoadingIndicator Foreground="Chartreuse"
                                BorderBrush="DarkRed"
                                BorderThickness="1"
                                Theme="{DynamicResource Arcs}"
                                IsActive="True"
                                Mode="Arcs"
                                SpeedRatio="1" />
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="Arcs" TargetType="avalonia:LoadingIndicator">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#CC119EDA" />
        <Setter Property="Width" Value="{Binding $parent[avalonia:LoadingIndicator].Bounds.Width}" />
        <Setter Property="Height" Value="{Binding $parent[avalonia:LoadingIndicator].Bounds.Height}" />
        <Setter Property="MinWidth" Value="64" />
        <Setter Property="MinHeight" Value="64" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        IsVisible="{TemplateBinding IsActive}"
                        IsHitTestVisible="{TemplateBinding IsHitTestVisible}"
                        ClipToBounds="{TemplateBinding ClipToBounds}">

                    <Border.Styles>
                        <Style Selector="Viewbox">
                            <Setter Property="Width" Value="{TemplateBinding Width}" />
                            <Setter Property="Height" Value="{TemplateBinding Height}" />
                            <Setter Property="StretchDirection" Value="Both" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style Selector="Arc">
                            <Setter Property="Margin" Value="5" />
                            <Setter Property="MinWidth" Value="{TemplateBinding MinWidth}" />
                            <Setter Property="MinHeight" Value="{TemplateBinding MinHeight}" />
                            <Setter Property="StrokeLineCap" Value="Round" />
                            <Setter Property="SweepAngle" Value="-250" />
                        </Style>
                    </Border.Styles>

                    <Viewbox>
                        <Viewbox.Styles>
                            <Style Selector="avalonia|LoadingIndicator:inactive /template/ Arc" />

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#OuterArc">
                                <Style.Animations>
                                    <Animation Duration="0:0:2.000"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="RotateTransform.Angle" Value="0" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="RotateTransform.Angle" Value="360" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Arc#InnerArc">
                                <Style.Animations>
                                    <Animation Duration="0:0:1.000"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="0%">
                                            <Setter Property="RotateTransform.Angle" Value="0" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="RotateTransform.Angle" Value="-360" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Viewbox.Styles>

                        <Grid>
                            <Arc x:Name="OuterArc"
                                 Stroke="{TemplateBinding Foreground}"
                                 StrokeThickness="7.5"
                                 StartAngle="-90" />

                            <Arc x:Name="InnerArc"
                                 Stroke="{TemplateBinding Foreground}"
                                 StrokeThickness="10"
                                 StartAngle="90"
                                 Opacity="0.3">

                                <Arc.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.77" ScaleY="0.77" />
                                        <RotateTransform />
                                    </TransformGroup>
                                </Arc.RenderTransform>
                            </Arc>
                        </Grid>
                    </Viewbox>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>