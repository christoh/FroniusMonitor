<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonia="clr-namespace:De.Hochstaetter.HomeAutomationClient.Assets.LoadingIndicators.Avalonia">

    <Design.PreviewWith>
        <Border Width="256" Height="256"
                Background="#333333">

            <avalonia:LoadingIndicator Foreground="Chartreuse"
                                BorderBrush="DarkRed"
                                BorderThickness="1"
                                Theme="{DynamicResource Wave}"
                                IsActive="True"
                                Mode="Wave"
                                SpeedRatio="1" />
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="Wave" TargetType="avalonia:LoadingIndicator">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#CC119EDA" />
        <Setter Property="Width" Value="{Binding $parent[avalonia:LoadingIndicator].Bounds.Width}" />
        <Setter Property="Height" Value="{Binding $parent[avalonia:LoadingIndicator].Bounds.Height}" />
        <Setter Property="MinWidth" Value="64" />
        <Setter Property="MinHeight" Value="64" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="ClipToBounds" Value="True" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        IsVisible="{TemplateBinding IsActive}"
                        IsHitTestVisible="{TemplateBinding IsHitTestVisible}"
                        ClipToBounds="{TemplateBinding ClipToBounds}">

                    <Border.Styles>
                        <Style Selector="Viewbox">
                            <Setter Property="Width" Value="{TemplateBinding Width}" />
                            <Setter Property="Height" Value="{TemplateBinding Height}" />
                            <Setter Property="StretchDirection" Value="Both" />
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="0.5" ScaleY="0.5" />
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <Style Selector="Rectangle">
                            <Setter Property="Width" Value="5" />
                            <Setter Property="Height" Value="30" />
                        </Style>
                    </Border.Styles>

                    <Viewbox>
                        <Viewbox.Styles>
                            <Style Selector="avalonia|LoadingIndicator:inactive /template/ Rectangle" />

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Rectangle#Rectangle1">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.500"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="10%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="50%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="0.6" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Rectangle#Rectangle2">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.500"
                                               Delay="0:0:0.100"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="10%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="50%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="0.6" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Rectangle#Rectangle3">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.500"
                                               Delay="0:0:0.200"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="10%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="50%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="0.6" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Rectangle#Rectangle4">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.500"
                                               Delay="0:0:0.300"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="10%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="50%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="0.6" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>

                            <Style Selector="avalonia|LoadingIndicator:active /template/ Rectangle#Rectangle5">
                                <Style.Animations>
                                    <Animation Duration="0:0:0.500"
                                               Delay="0:0:0.400"
                                               IterationCount="Infinite"
                                               SpeedRatio="{Binding $parent[avalonia:LoadingIndicator].SpeedRatio}">

                                        <KeyFrame Cue="10%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>

                                        <KeyFrame Cue="50%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="0.6" />
                                        </KeyFrame>

                                        <KeyFrame Cue="100%">
                                            <Setter Property="ScaleTransform.ScaleY" Value="1" />
                                        </KeyFrame>
                                    </Animation>
                                </Style.Animations>
                            </Style>
                        </Viewbox.Styles>

                        <Grid ColumnDefinitions="*,5,*,5,*,5,*,5,*">
                            <Rectangle x:Name="Rectangle1"
                                       Grid.Column="0"
                                       Fill="{TemplateBinding Foreground}" />

                            <Rectangle x:Name="Rectangle2"
                                       Grid.Column="2"
                                       Fill="{TemplateBinding Foreground}" />
                            
                            <Rectangle x:Name="Rectangle3"
                                       Grid.Column="4"
                                       Fill="{TemplateBinding Foreground}" />
                            
                            <Rectangle x:Name="Rectangle4"
                                       Grid.Column="6"
                                       Fill="{TemplateBinding Foreground}" />
                            
                            <Rectangle x:Name="Rectangle5"
                                       Grid.Column="8"
                                       Fill="{TemplateBinding Foreground}" />
                        </Grid>
                    </Viewbox>
                </Border>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>